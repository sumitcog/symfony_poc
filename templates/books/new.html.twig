{% extends 'base.html.twig' %}

{% block body_id 'book_new' %}

{% block main %}
    <h1>New Book</h1>

{{ form_errors(form) }}

    {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.content) }}
         {{ form_row(form.ispublished) }}
          {{ form_row(form.author) }}
    
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> Create Book
        </button>
       
        <a href="{{ path('books_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Back to the book list
        </a>
    {{ form_end(form) }}
{% endblock %}

